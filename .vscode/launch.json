  "version": "0.2.0",
  "configurations": [
    {
      "name": "Migrate and Launch (.env.local)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/.",
      "envFile": "${workspaceFolder}/.env.local",
      "args": ["--server", "--migrations"],
      "console": "integratedTerminal"
    },
    {
      "name": "Launch scheduled jobs (.env.local)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/.",
      "envFile": "${workspaceFolder}/.env.local",
      "args": ["--scheduler"]
    },
    {
      "name": "Launch batch ingestion job (.env.local)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/.",
      "envFile": "${workspaceFolder}/.env.local",
      "args": ["--batch-ingestion"]
    },
    {
      "name": "Launch data ingestion job (.env.local)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/.",
      "envFile": "${workspaceFolder}/.env.local",
      "args": ["--data-ingestion"]
    }
  ]
}
